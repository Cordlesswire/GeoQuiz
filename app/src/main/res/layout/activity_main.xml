                    android:text="@string/results_button" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- QUESTION 9 LAYOUT -->
    <ScrollView
        android:id="@+id/linearlayout_question9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <!-- QUESTION 9 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/questionView180"
                android:layout_marginBottom="@dimen/margin25"
                android:background="@drawable/dead_sea" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q9"
                style="@style/QuestionOneText"
                android:layout_marginBottom="@dimen/margin25" />
            <!-- QUESTION 9 ANSWERS -->
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginBottom20"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/yes_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin5"
                    android:text="@string/yes"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:onClick="questionNineAnswer1" />
                <RadioButton
                    android:id="@+id/no_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:onClick="questionNineAnswer2" />
            </RadioGroup>
            <!-- NEXT QUESTION BUTTON -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin90"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
                <ImageButton
                    android:id="@+id/imagebutton_next_question9"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin30"
                    style="@style/NextQuestionButton"
                    android:src="@drawable/navigate_next"
                    android:onClick="questionNine" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- QUESTION 10 LAYOUT -->
    <ScrollView
        android:id="@+id/linearlayout_question10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:visibility="gone" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <!-- QUESTION 10 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/questionView180"
                android:layout_marginBottom="@dimen/margin15"
                android:background="@drawable/nato" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/q10"
                style="@style/QuestionOneText"
                android:layout_marginBottom="@dimen/margin15" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin60"
                android:layout_marginRight="0dp"
                android:orientation="vertical">
                <!-- Q10 - ANSWER 1 -->
                <CheckBox
                    android:id="@+id/checkbox_question10_answer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/QuestionAnswerCheckbox"
                    android:text="@string/q10a1" />
                <!-- Q10 - ANSWER 2 -->
                <CheckBox
                    android:id="@+id/checkbox_question10_answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/QuestionAnswerCheckbox"
                    android:text="@string/q10a2" />
                <!-- Q10 - ANSWER 3 -->
                <CheckBox
                    android:id="@+id/checkbox_question10_answer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/QuestionAnswerCheckbox"
                    android:text="@string/q10a3" />
                <!-- Q10 - ANSWER 4 -->
                <CheckBox
                    android:id="@+id/checkbox_question10_answer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/QuestionAnswerCheckbox"
                    android:text="@string/q10a4" />
            </LinearLayout>
            <!-- SUBMIT BUTTON -->
            <Button
                android:id="@+id/button_submit_q10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/QuestionThreeSubmitButton"
                android:layout_marginTop="@dimen/margin15"
                android:text="@string/submit"
                android:onClick="questionTenAnswers" />
            <!-- NEXT QUESTION BUTTON -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >
                <ImageButton
                    android:id="@+id/imagebutton_next_question10"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/margin30"
                    style="@style/NextQuestionButton"
                    android:src="@drawable/navigate_next"
                    android:onClick="questionTen" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- FINAL RESULT -->
    <ScrollView
        android:id="@+id/linearlayout_finalResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_picture"
        android:visibility="gone" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <!-- CONGRATULATIONS -->
            <TextView
                android:id="@+id/textview_congratulations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CongratulationsText"
                android:text="@string/congratulations_title" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin70"
                android:layout_marginTop="@dimen/marginBottom20"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/margin50"
                android:layout_marginRight="@dimen/margin50" >
                <!-- GREEN BACKGROUND -->
                <View
                    android:id="@+id/view_results"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/GreenBackground" />
                <!-- NUMBER OF CORRECT / INCORRECT ANSWERS -->
                <LinearLayout
                    android:id="@+id/linearlayout_correct_incorrect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/marginBottom20"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/textview_yourScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/NumberOfAnswers"
                        android:text="@string/correct_answers" />
                    <TextView
                        android:id="@+id/textview_yourScore1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/NumberOfAnswers"
                        android:text="@string/incorrect_answers" />
                </LinearLayout>
                <!-- SHARE BUTTON -->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    style="@style/ShareButton"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_share"
                    android:onClick="shareIntent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin30" >
                <!-- TROPHY IMAGE -->
                <ImageView
                    android:id="@+id/imageview_trophy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/margin30"
                    android:src="@drawable/trophy_win" />
                <!-- REPLAY BUTTON -->
                <Button
                    android:id="@+id/button_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/imageview_trophy"
                    android:layout_alignBottom="@id/imageview_trophy"
                    style="@style/ReplayButton"
                    android:onClick="replayApp"
                    android:text="@string/replay_button" />
                <!-- EXIT GAME BUTTON -->
                <Button
                    android:id="@+id/button_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/imageview_trophy"
                    android:layout_alignBottom="@id/imageview_trophy"
                    style="@style/ExitButton"
                    android:onClick="exitApp"
                    android:text="@string/exit_button" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>