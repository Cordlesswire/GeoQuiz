    <!-- START PAGE -->
    <ScrollView
        android:id="@+id/linearlayout_start_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_picture"
        android:visibility="visible" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <!-- GEOGRAPHY QUIZ TITLE -->
            <TextView
                android:id="@+id/textview_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/GeographyQuizTitle"
                android:text="@string/main_title" />
            <!-- ENTER YOUR NAME -->
            <EditText
                android:id="@+id/enter_your_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EnterYourName"
                android:hint="@string/enter_your_name" />
            <!-- START QUIZ BUTTON -->
            <Button
                android:id="@+id/button_startQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_start_quiz"
                android:textColor="@color/GeographyQuizTitle"
                style="@style/StartQuizCreditsButtons"
                android:onClick="startQuiz"
                android:text="@string/start_quiz_button" />
            <!-- CREDITS BUTTON -->
            <Button
                android:id="@+id/button_credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_credits"
                android:textColor="#ffffff"
                style="@style/StartQuizCreditsButtons"
                android:onClick="credits"
                android:text="@string/credits_button" />
        </LinearLayout>
    </ScrollView>

    <!-- CREDITS PAGE -->
    <ScrollView
        android:id="@+id/linearlayout_credits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/default_picture"
        android:visibility="gone" >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/margin150"
                android:layout_marginBottom="@dimen/marginBottom20"
                android:layout_marginLeft="@dimen/margin30"
                android:layout_marginRight="@dimen/margin30" >
                <!-- GREEN BACKGROUND -->
                <View
                    android:id="@+id/view_green_window"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/GreenBackground" />
                <!-- CREDITS TEXT -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CreditsText"
                    android:layout_alignLeft="@id/view_green_window"
                    android:text="@string/credits_description" />
            </RelativeLayout>
            <!-- BACK BUTTON -->
            <Button
                android:id="@+id/button_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CreditsBackButton"
                android:onClick="startScreen"
                android:text="@string/back_button" />
        </LinearLayout>
    </ScrollView>

