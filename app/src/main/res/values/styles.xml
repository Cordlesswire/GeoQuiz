<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item> -->

        <item name="colorPrimary">#2e7d32</item>
        <item name="colorPrimaryDark">#1b5e20</item>
        <item name="colorAccent">#1b5e20</item>
    </style>

    <!-- Geography Quiz title -->
    <style name="GeographyQuizTitle">
        <item name="android:layout_marginTop">@dimen/marginTop40</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom20</item>
        <item name="android:textSize">@dimen/textSize50</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:scaleX">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/GeographyQuizTitle</item>
    </style>

    <!-- Enter your name -->
    <style name="EnterYourName">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">@dimen/margin50</item>
        <item name="android:layout_marginRight">@dimen/margin50</item>
        <item name="android:layout_marginBottom">@dimen/margin30</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Start Quiz button -->
    <style name="StartQuizCreditsButtons">
        <item name="android:layout_marginBottom">@dimen/margin15</item>
        <item name="android:layout_marginRight">@dimen/margin100</item>
        <item name="android:layout_marginLeft">@dimen/margin100</item>
        <item name="android:textSize">@dimen/textSize18</item>
    </style>

    <!-- Credits -->
    <style name="CreditsText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:layout_marginLeft">@dimen/marginBottom20</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="CreditsBackButton">
        <item name="android:layout_marginLeft">@dimen/margin130</item>
        <item name="android:layout_marginRight">@dimen/margin130</item>
        <item name="android:textColor">@color/GeographyQuizTitle</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:background">@drawable/button_start_quiz</item>
    </style>

    <!-- Question text -->
    <style name="QuestionOneText">
        <item name="android:layout_marginLeft">@dimen/margin45</item>
        <item name="android:layout_marginRight">@dimen/margin45</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
        <item name="android:scaleX">1.1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Question1 answers -->
    <style name="QuestionOneAnswerCorrect">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_correct</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize17</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">@dimen/marginBottom20</item>
        <item name="android:layout_marginRight">@dimen/marginBottom20</item>
        <item name="android:layout_marginBottom">@dimen/margin5</item>
        <item name="android:paddingTop">@dimen/margin10</item>
        <item name="android:paddingBottom">@dimen/margin10</item>
        <item name="android:paddingLeft">0dp</item>
    </style>
    <style name="QuestionOneAnswersIncorrect">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/button_wrong</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize17</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">@dimen/marginBottom20</item>
        <item name="android:layout_marginRight">@dimen/marginBottom20</item>
        <item name="android:layout_marginBottom">@dimen/margin5</item>
        <item name="android:paddingTop">@dimen/margin10</item>
        <item name="android:paddingBottom">@dimen/margin10</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

    <!-- Next question button -->
    <style name="NextQuestionButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Question 3 answer - edit text - submit button -->
    <style name="QuestionThreeAnswerEditText">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">@dimen/margin50</item>
        <item name="android:layout_marginRight">@dimen/margin50</item>
        <item name="android:layout_marginBottom">@dimen/marginBottom20</item>
        <item name="android:layout_marginTop">@dimen/margin30</item>
        <item name="android:inputType">textCapWords</item>
    </style>
    <style name="QuestionThreeSubmitButton">
        <item name="android:background">@drawable/rounded_view</item>
        <item name="android:layout_marginRight">@dimen/margin120</item>
        <item name="android:layout_marginLeft">@dimen/margin120</item>
    </style>

    <!-- Results button -->
    <style name="ResultsButton">
        <item name="android:background">@drawable/rounded_view</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">@dimen/margin35</item>
        <item name="android:paddingRight">@dimen/margin35</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <!-- Checkbox answers -->
    <style name="QuestionAnswerCheckbox">
        <item name="android:paddingLeft">@dimen/margin10</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <!-- Congratulations -->
    <style name="CongratulationsText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize55</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin45</item>
        <item name="android:layout_marginBottom">@dimen/margin5</item>
    </style>

    <!-- Number of correct/incorrect answers -->
    <style name="NumberOfAnswers">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize15</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Share button -->
    <style name="ShareButton">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/marginBottom20</item>
        <item name="android:background">@color/ShareButtonBackground</item>
    </style>

    <!-- Replay button -->
    <style name="ReplayButton">
        <item name="android:background">@drawable/button_start_quiz</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">-60dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">@dimen/margin25</item>
        <item name="android:paddingRight">@dimen/margin10</item>
        <item name="android:paddingLeft">@dimen/margin10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/GeographyQuizTitle</item>
    </style>

    <!-- Exit game button -->
    <style name="ExitButton">
        <item name="android:background">@drawable/button_start_quiz</item>
        <item name="android:layout_marginTop">@dimen/margin10</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">-60dp</item>
        <item name="android:layout_marginBottom">@dimen/margin25</item>
        <item name="android:paddingRight">@dimen/margin10</item>
        <item name="android:paddingLeft">@dimen/margin10</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/GeographyQuizTitle</item>
    </style>

</resources>
